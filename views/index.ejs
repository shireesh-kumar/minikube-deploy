<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vote: Yes or No</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4 text-center">
        <h1 class="mb-3">Vote Now!</h1>
        <button class="btn btn-success btn-lg m-2" onclick="vote('yes')">Yes</button>
        <button class="btn btn-danger btn-lg m-2" onclick="vote('no')">No</button>
        <!-- Navigation Button to /result -->
        <a href="/result" class="btn btn-primary btn-lg m-2">View Results</a>

    </div>

    <script>
        async function vote(option) {
            const response = await fetch('/vote', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ vote: option })
        });

        if (response.ok) {
            alert(`Vote registered: ${option}`);
        } else {
            alert('Error in voting');
        }
    }

    </script>
</body>
</html>
